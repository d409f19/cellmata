world {
    size = 5 [edge=ident], 5 [wrap]
    tickrate = 2000
    cellsize = 20
}

neighbourhood n1 {
    (-1, 0)
}

state s1 (255, 0, 0) {
    if (n1[0] == s2) {
        become s2;
    } else {
        become s1;
    }
}

state s2 (0, 255, 0) {
    become s3;
}

state s3 (0, 0, 255) {
    become s2;
}
