    become alive4;
}

state alive4 (0, 0, 0) {
    let a = -foo(42);
    become alive5;
}

state alive5 (0, 0, 0) {
    let a = -foo(42);
    let x = 0;
    for (x = 5; x >= a; x = x + 1) {
        if (x != 0) {
            x = -5;
            break; 
        } else {
            x = 42 + 3 / 176 * 22;
            continue;
        }
    }
    become alive6;
}

state alive6 (0, 0, 0) {
    let a = -foo(42);
    let b = bar(a, true);

    if (b != -16) {
        become alive5;
    }
    become alive1;
}

// This is a silly function
function foo(int x) int {
    return x + 42;
}

function bar(int x, bool y) int {
    if (y) {
        return x + 42;
    } elif (!y) {
        return x;
    } else {
        return x + 4;
    }
}
